---
import Button from "./Button.astro";
import ButtonIcon from "./ButtonIcon.astro";
import SectionHeader from "./SectionHeader.astro";
import Chip from "./Chip.astro";
import TarjetaCancion from "./TarjetaCancion.astro";

interface Props {
	era: string;
}

const { era }  =  Astro.props;
---

<article id="Canciones" class:list = {[
    "py-12 px-48 space-y-6",
    {
        "bg-debut-100":         era === "debut",
        "bg-fearless-100":      era === "fearless",
        "bg-speak-now-100":     era === "speak-now",
        "bg-red-100":           era === "red",
        "bg-1989-100":          era === "1989",
        "bg-reputation-100":    era === "reputation",
        "bg-lover-100":         era === "lover",
        "bg-folklore-100":      era === "folklore",
        "bg-evermore-100":      era === "evermore",
        "bg-midnights-100":     era === "midnights",
        "bg-TTPD-100":          era === "TTPD",
    }
    ]}>
    <!-- Titulo -->
    <SectionHeader era  =  {era} titulo  =  "Canciones Sorpresas" texto  =  "Estas fueron las canciones sorpresas que hubieron hasta ahora en “The Eras Tour”"/>
    <!-- Botontes/Etiquetas -->
    <section class  =  "flex flex-col gap-2.5 items-start justify-start self-stretch shrink-0 relative">
        <!-- Botones -->
        <div class="rounded-3xl flex flex-col gap-3 items-start justify-start self-stretch shrink-0 relative">
            <h3 class:list  =  {[
                "text-center font-headline-medium-font-family text-headline-medium-font-size leading-headline-medium-line-height font-headline-medium-font-weight relative self-stretch",
                {
                    "text-debut-900":       era === "debut",
                    "text-fearless-900":    era === "fearless",
                    "text-speak-now-900":   era === "speak-now",
                    "text-red-900":         era === "red",
                    "text-1989-900":        era === "1989",
                    "text-reputation-900":  era === "reputation",
                    "text-lover-900":       era === "lover",
                    "text-folklore-900":    era === "folklore",
                    "text-evermore-900":    era === "evermore",
                    "text-midnights-900":   era === "midnights",
                    "text-TTPD-900":        era === "TTPD",
                }
                ]}>
                Eras
            </h3>
            <div class = "flex flex-row gap-3 items-center justify-center flex-wrap self-stretch shrink-0 relative">
                <ButtonIcon 
                    href = "#debut"      
                    button = "Taylor Swift"                    
                    era = "debut"      
                    src = "src/images/Emojis/01.taylorswift.png"/>
                <ButtonIcon 
                    href = "#fearless"   
                    button = "Fearless"                        
                    era = "fearless"   
                    src = "src/images/Emojis/02.fearless.png"/>
                <ButtonIcon 
                    href = "#speak-now"  
                    button = "Speak Now"                       
                    era = "speak-now"  
                    src = "src/images/Emojis/03.speaknow.png"/>
                <ButtonIcon 
                    href = "#red"        
                    button = "Red"                             
                    era = "red"        
                    src = "src/images/Emojis/04.red.png"/>
                <ButtonIcon 
                    href = "#1989"       
                    button = "1989"                            
                    era = "1989"       
                    src = "src/images/Emojis/05.1989.png"/>
                <ButtonIcon 
                    href = "#reputation" 
                    button = "Reputation"                      
                    era = "reputation" 
                    src = "src/images/Emojis/06.reputation.png"/>
                <ButtonIcon 
                    href = "#lover"      
                    button = "Lover"                           
                    era = "lover"      
                    src = "src/images/Emojis/07.lover.png"/>
                <ButtonIcon 
                    href = "#folklore"   
                    button = "Folklore"                        
                    era = "folklore"   
                    src = "src/images/Emojis/08.folklore.png"/>
                <ButtonIcon 
                    href = "#evermore"   
                    button = "Evermore"                        
                    era = "evermore"   
                    src = "src/images/Emojis/09.evermore.png"/>
                <ButtonIcon 
                    href = "#midnights"  
                    button = "Midnights"                       
                    era = "midnights"  
                    src = "src/images/Emojis/10.midnights.png"/>
                <ButtonIcon 
                    href = "#TTPD"       
                    button = "The Tortured Poets Department"   
                    era = "TTPD"       
                    src = "src/images/Emojis/11.TTPD.png"/>
                <ButtonIcon 
                    href = "#Mashups"    
                    button = "Mashups"                         
                    era = "MashUp"     
                    src = "src/images/Emojis/12.MashUp.png"/>
            </div>
        </div>
        <!-- Etiquetas -->
        <div class = "rounded-3xl flex flex-col gap-3 items-start justify-start self-stretch shrink-0 relative">
            <h3 class:list  =  {[
                "text-center font-headline-medium-font-family text-headline-medium-font-size leading-headline-medium-line-height font-headline-medium-font-weight relative self-stretch",
                {
                    "text-debut-900":       era === "debut",
                    "text-fearless-900":    era === "fearless",
                    "text-speak-now-900":   era === "speak-now",
                    "text-red-900":         era === "red",
                    "text-1989-900":        era === "1989",
                    "text-reputation-900":  era === "reputation",
                    "text-lover-900":       era === "lover",
                    "text-folklore-900":    era === "folklore",
                    "text-evermore-900":    era === "evermore",
                    "text-midnights-900":   era === "midnights",
                    "text-TTPD-900":        era === "TTPD",
                }
                ]}>
            Etiquetas
            </h3>
            <div class = "flex flex-row gap-3 items-center justify-center flex-wrap self-stretch shrink-0 relative">
                <Chip chip="Setlist"            era="fearless"      src="src/images/Emojis/15.setlist.png"/>
                <Chip chip="Guitarra"           era="red"           src="src/images/Emojis/16.guitarra.png"/>
                <Chip chip="Piano"              era="folklore"      src="src/images/Emojis/13.piano.png"/>
                <Chip chip="Mashups"            era="reputation"    src="src/images/Emojis/12.MashUp.png"/>
                <Chip chip="Cantante Sorpresa"  era="debut"         src="src/images/Emojis/17.cantante.png"/>
            </div>
        </div>

    </section>
    <!-- TarjetasCanciones -->
    <section class="flex flex-row gap-6 items-center justify-center flex-wrap self-stretch shrink-0 relative py-0">
        <TarjetaCancion/>
        
    </section>
</article>