---
import ArrowUp from './svg/ArrowUp.astro';
interface Props {
	era: string;
}

const { era }  =  Astro.props;
---

<div class="button-up" class="shadow-sm hover:shadow-lg fixed bottom-2 right-2 opacity-0 transition-opacity">
    <button aria-label="Boton ir arriba" id="scroll-to-top" style="box-shadow: 0px 1px 3px 0px rgba(0, 0, 0, 0.3),
        0px 4px 8px 3px rgba(0, 0, 0, 0.15)" class:list={[
        "fixed bottom-2 right-2 p-2 flex cursor-default items-center justify-center rounded-lg text-primary  motion-safe:transition",
        {
			"bg-debut-300": era === "debut",
			"bg-fearless-300": era === "fearless",
			"bg-speakNow-300": era === "speakNow",
			"bg-red-300": era === "red",
			"bg-1989-300": era === "1989",
			"bg-reputation-300": era === "reputation",
			"bg-lover-300": era === "lover",
			"bg-folklore-300": era === "folklore",
			"bg-evermore-300": era === "evermore",
			"bg-midnights-300": era === "midnights",
			"bg-TTPD-300": era === "TTPD",
			"bg-mashup-300": era === "mashup",
        }
        ]}>
        <ArrowUp era={era}/>
    </button>
</div>

<script>
    window.onscroll = function(){
        if(document.documentElement.scrollTop > 100){
            document.getElementById('button-up')?.classList.remove('opacity-0')
        }else{
            document.getElementById('button-up')?.classList.add('opacity-0')
        }
    }

    document.getElementById('button-up')?.addEventListener('click', ()=>(
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        })
    ))
</script>
