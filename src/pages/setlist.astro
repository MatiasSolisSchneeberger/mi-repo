---
import Layout from "../layouts/Layout.astro";
import Title from "../components/Title.astro";
import {setlist} from "../data/setlist.json"

const eraPagina = 'speakNow'

---
<Layout era={eraPagina} title="Setlist | Swifties Eras Tour">
    <main class="py-12 px-8 sm:px-32 space-y-6 flex flex-col gap-2.5 gap-y-0 items-center justify-center self-stretch shrink-0 relative w-full">
        <Title era={eraPagina} titulo="Setlist 2023/24" texto="Estos son los setlist de The Eras Tour, previo a la inclusión de TTPD al setlist y después de la inclusión"/>
        <section class="flex flex-col sm:flex-row gap-4 sm:gap-2.5 items-start justify-start self-stretch shrink-0 relative overflow-hidden">
        {
            setlist.map(({parte, sets}) => {
                return(
                    <article class="flex flex-col gap-2.5 items-start justify-start flex-1 relative">
                        <h3 class="text-speakNow-900 text-center text-headline-large relative self-stretch">
                            {parte}
                        </h3>
                        {
                            sets.map(({era, disco , canciones}) =>{
                            return(
                                <div class:list={[
                                    "rounded-[14px] px-2 py-2 flex flex-col gap-0 items-start justify-start self-stretch shrink-0 relative overflow-hidden",
                                    {
                                        "text-debut-800 bg-debut-300":         era === "debut",
                                        "text-fearless-800 bg-fearless-300":      era === "fearless",
                                        "text-speakNow-800 bg-speakNow-300":      era === "speakNow",
                                        "text-red-800 bg-red-300":           era === "red",
                                        "text-1989-800 bg-1989-300":          era === "1989",
                                        "text-reputation-800 bg-reputation-300":    era === "reputation",
                                        "text-lover-800 bg-lover-300":         era === "lover",
                                        "text-folklore-800 bg-folklore-300":      era === "folklore",
                                        "text-evermore-800 bg-evermore-300":      era === "evermore",
                                        "text-midnights-800 bg-midnights-300":     era === "midnights",
                                        "text-TTPD-800 bg-TTPD-300":          era === "TTPD",
                                        "text-mashup-800 bg-mashup-300":        era === "surprise songs",
                                        "bg-gradient-to-r from-folklore-300 to-evermore-300":        era === "folkmore",
                                    }
                                    ]}>
                                    <p class:list={["text-headline-large text-center relative self-stretch",
                                        {'text-transparent bg-clip-text bg-gradient-to-r from-folklore-800 to-evermore-800': era==='folkmore'}
                                    ]}>
                                        {disco}
                                    </p>
                                    <div class:list={[
                                        "w-full rounded-sm h-0.5",
                                        {
                                            "bg-debut-600":         era === "debut",
                                            "bg-fearless-600":      era === "fearless",
                                            "bg-speakNow-600":     	era === "speakNow",
                                            "bg-red-600":           era === "red",
                                            "bg-1989-600":          era === "1989",
                                            "bg-reputation-600":    era === "reputation",
                                            "bg-lover-600":         era === "lover",
                                            "bg-folklore-600":      era === "folklore",
                                            "bg-evermore-600":      era === "evermore",
                                            "bg-midnights-600":     era === "midnights",
                                            "bg-TTPD-600":          era === "TTPD",
                                            "bg-gradient-to-r from-folklore-600 to-evermore-600":        era === "folkmore",
                                        }
                                    ]}/>
                                    {
                                        canciones.map(({canción, nota}) => {
                                        return(
                                            <p class:list={["text-title-large relative self-stretch",
                                                {'text-transparent bg-clip-text bg-gradient-to-r from-folklore-800 to-evermore-800': era==='folkmore'}
                                            ]}>{canción}</p>
                                            <p class:list={["text-body-medium relative self-stretch",
                                                {'text-transparent bg-clip-text bg-gradient-to-r from-folklore-800 to-evermore-800': era==='folkmore'}
                                            ]}>{nota}</p>
                                        )
                                        })
                                    }
                                </div>
                            )
                        })
                        }
                    </article>
                    
                )
            }
            )
        }
        </section>
    </main>
</Layout>