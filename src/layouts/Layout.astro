---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '@fontsource-variable/rubik';

interface Props {
	title: string;
	era: string;
}

const { title , era } = Astro.props;
---

<!doctype html>
<html lang = "en">
	<head>
		<meta charset = "UTF-8" />
		<meta name = "description" content = "Astro description" />
		<meta name = "viewport" content = "width = device-width" />
		<link rel = "icon" type = "image/svg+xml" href = "/mi-repo/src/components/svg/iconoPagina.svg" />
		<meta name = "generator" content = {Astro.generator} />
		
		<!-- TipografÃ­as -->
		<link rel = "preconnect" href = "https://fonts.googleapis.com">
		<link rel = "preconnect" href = "https://fonts.gstatic.com" crossorigin>
		<link href = "https://fonts.googleapis.com/css2?family = Rubik:ital,wght@0,300..900;1,300..900&display = swap" rel = "stylesheet">
		
		<title>{title}</title>
		
		<ViewTransitions />
	</head>
	<body class:list={[
		"no-scrollbar grid",
		{
			"bg-debut-50": era === 'debut',
			"bg-fearless-50": era === 'fearless',
			"bg-speakNow-50": era === 'speakNow',
			"bg-red-50": era === 'red',
			"bg-1989-50": era === '1989',
			"bg-reputation-50": era === 'reputation',
			"bg-lover-50": era === 'lover',
			"bg-folklore-50": era === 'folklore',
			"bg-evermore-50": era === 'evermore',
			"bg-midnights-50": era === 'midnights',
			"bg-TTPD-50": era === 'TTPD',
			"bg-mashup-50": era === 'mashup',
		}
		]}>
		<Header era = {era}/>
		<main>
			<slot />
		</main>
		<Footer era = {era}/>
	</body>
</html>
<style is:global>
